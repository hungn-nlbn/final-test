<p id="notice"><%= notice %></p>

<h1>Cartegories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cartegories.each do |cartegory| %>
      <tr>
        <td><%= cartegory.name %></td>
        <td>
            <%= cartegory.parent.try(:name)%>        
        </td>
        <% if can? :show, cartegory %>
        <td><%= link_to 'Show', cartegory %></td>
        <%end%>
        <% if can? :update, cartegory %>
        <td><%= link_to 'Edit', edit_cartegory_path(cartegory) %></td>
        <%end%>
        <% if can? :destroy, cartegory %>
        <td><%= link_to 'Destroy', cartegory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cartegory', new_cartegory_path %>
